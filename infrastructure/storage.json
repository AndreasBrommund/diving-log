{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hotStorageAccountName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 7,
            "metadata": {
                "description": "The name of the hot storge account ({hotStorageAccountName}{env}{random})."
            }
        },
        "coolStorageAccountName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 7,
            "metadata": {
                "description": "The name of the cool storge account ({coolStorageAccountName}{env}{random})."
            }
        },
        "hotBlobContainers": {
            "type": "array",
            "metadata": {
                "description": "Specifies the blob container names for the hot storage account."
            }
        },
        "coolBlobContainers": {
            "type": "array",
            "metadata": {
                "description": "Specifies the blob container names for the cool storage account."
            }
        },
        "environment": {
            "type": "string",
            "defaultvalue": "dev",
            "allowedValues": [
                "dev",
                "prod"
            ],
            "metadata": {
                "description": "The name of the environment. This is used to name generated resources."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "storageAccountKind": "StorageV2",
        "storageTier": "Standard",
        "storageSku": "Standard_LRS",
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true,
        "allowBlobPublicAccess": false,
        "hotStorageAccountName": "[concat(parameters('hotStorageAccountName'),parameters('environment'),uniqueString(resourceGroup().id))]",
        "coolStorageAccountName": "[concat(parameters('coolStorageAccountName'),parameters('environment'),uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-02-01",
            "name": "[variables('hotStorageAccountName')]",
            "location": "[parameters('location')]",
            "kind": "[variables('storageAccountKind')]",
            "sku": {
                "name": "[variables('storageSku')]",
                "tier": "[variables('storageTier')]"
            },
            "properties": {
                "accessTier": "Hot",
                "minimumTlsVersion": "[variables('minimumTlsVersion')]",
                "supportsHttpsTrafficOnly": "[variables('supportsHttpsTrafficOnly')]",
                "allowBlobPublicAccess": "[variables('allowBlobPublicAccess')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-02-01",
            "name": "[concat(variables('hotStorageAccountName'), '/default/', parameters('hotBlobContainers')[copyIndex('hotContainerCopy')])]",
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('hotStorageAccountName'))]"
            ],
            "copy": {
                "name": "hotContainerCopy",
                "count": "[length(parameters('hotBlobContainers'))]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-02-01",
            "name": "[variables('coolStorageAccountName')]",
            "location": "[parameters('location')]",
            "kind": "[variables('storageAccountKind')]",
            "sku": {
                "name": "[variables('storageSku')]",
                "tier": "[variables('storageTier')]"
            },
            "properties": {
                "accessTier": "Cool",
                "minimumTlsVersion": "[variables('minimumTlsVersion')]",
                "supportsHttpsTrafficOnly": "[variables('supportsHttpsTrafficOnly')]",
                "allowBlobPublicAccess": "[variables('allowBlobPublicAccess')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-02-01",
            "name": "[concat(variables('coolStorageAccountName'), '/default/', parameters('coolBlobContainers')[copyIndex('coolContainerCopy')])]",
            "properties": {},
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('coolStorageAccountName'))]"
            ],
            "copy": {
                "name": "coolContainerCopy",
                "count": "[length(parameters('coolBlobContainers'))]"
            }
        }
    ],
    "outputs": {

    }
}
